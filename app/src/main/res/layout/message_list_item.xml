<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="@drawable/message_border"
        android:rowCount="3"
        android:columnCount="122"
        android:orientation="vertical"
        android:translationZ="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageNameTextView"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:hint="User"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="7dp"
            android:paddingBottom="10dp"
            android:layout_columnSpan="121" />

        <TextView
            android:layout_width="315dp"
            android:layout_height="53dp"
            android:id="@+id/messageContentTextView"
            android:layout_below="@+id/messageContentTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="italic"
            android:hint="SUUUUHHHH DUDE"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingTop="5dp"
            android:layout_columnSpan="122"
            android:text="I like a lot of cheese is good because i eat it a lot and it&apos;s good, so yeah"
            android:paddingBottom="10dp"
            android:paddingRight="5dp" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="34dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageDateTextView"
            android:textColor="@color/colorAccent"
            android:hint="123 pm"
            android:textAlignment="textStart"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_gravity="right" />
    </LinearLayout>

</LinearLayout>